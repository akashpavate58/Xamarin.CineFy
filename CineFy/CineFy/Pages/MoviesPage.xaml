<?xml version="1.0" encoding="utf-8" ?>
<ContentPage Title="Movies"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CineFy.Pages.MoviesPage"
             x:Name="Page">

    <ListView x:Name="moviesListView" HasUnevenRows="True" ItemSelected="CinemasListView_OnItemSelected" ItemTapped="MoviesListView_OnItemTapped" >
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Orientation="Horizontal" Padding="5">
                        <Image Source="{Binding PosterImageThumbnail }"
                                   WidthRequest="100" HeightRequest="100" Aspect="AspectFit"></Image>
                        <Label Text="{Binding Title}" FontSize="20" VerticalOptions="Center" HorizontalOptions="StartAndExpand"></Label>

                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>