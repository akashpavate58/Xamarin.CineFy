<?xml version="1.0" encoding="utf-8" ?>
<ContentPage Title="Cinemas"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CineFy.Pages.CinemasPage">

    <StackLayout>
        <!--<StackLayout Orientation="Horizontal">
            <Button Text="Add" />
            <Button Text="Update" HorizontalOptions="CenterAndExpand" />
            <Button Text="Delete" />
        </StackLayout>-->
        <ListView x:Name="cinemasListView" HasUnevenRows="True" ItemSelected="CinemasListView_OnItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <!--<TextCell Text="{Binding Name}" />-->
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="5">
                            <Image Source="http://lorempixel.com/200/200/sports"></Image>
                            <StackLayout HorizontalOptions="StartAndExpand">
                                <Label Text="{Binding Name}"></Label>
                                <Label Text="{Binding Website}"></Label>
                            </StackLayout>
                            <Button Text="Info"></Button>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>


</ContentPage>