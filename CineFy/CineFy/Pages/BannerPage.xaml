<?xml version="1.0" encoding="utf-8" ?>
<ContentPage Title="Welcome" NavigationPage.HasNavigationBar="False"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CineFy.Pages.BannerPage"
             x:Name="Page"
             BackgroundColor="#009688">


    <StackLayout VerticalOptions="Center" Spacing="20">
        <Label Text="Welcome To" 
               FontSize="30" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center"></Label>
        <Label Text="CineFy" 
               FontSize="40" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center"></Label>
        
        <Label></Label>
        <Label></Label>
        <Button Text="Get Started" Clicked="GetStarted_OnClicked"
                BackgroundColor="#00796B" TextColor="White" BorderRadius="20" FontSize="20" WidthRequest="300"
                HorizontalOptions="Center"></Button>
        
        <Button Text="About Developers" Clicked="AboutButton_OnClicked"
                BackgroundColor="#00796B" TextColor="White" BorderRadius="20" FontSize="20" WidthRequest="300"
                HorizontalOptions="Center"></Button>
        
    </StackLayout>
    
    
</ContentPage>